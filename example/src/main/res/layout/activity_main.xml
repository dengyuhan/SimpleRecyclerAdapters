<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用Adapter" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAdapter"
        android:text="单样式例子" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickMultifyRecyclerAdapter"
        android:text="多样式例子(RecyclerView)" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="支持DataBinding的Adapter" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickDataBindingAdapter"
        android:text="单样式例子" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickDataBindingMultifyRecyclerAdapter"
        android:text="多样式例子(RecyclerView)" />
</LinearLayout>
